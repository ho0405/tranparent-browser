{
  "name": "transparent-browser",
  "version": "1.0.0",
  "description": "투명 브라우저",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.peekaboo",
    "productName": "Peekaboo",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "transparent_browser.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}